<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#1F1D2B"
    android:layout_marginTop="15sp"
    android:layout_marginStart="15sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_spiderman"
        android:scaleType="centerCrop"
        android:layout_width="112dp"
        android:layout_height="147dp"
        android:src="@drawable/spiderman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_spiderman"
        android:src="@drawable/premium"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spider-Man No Way.. "
            android:fontFamily="@font/montserrat_semibold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/iv_premium"
            app:layout_constraintTop_toBottomOf="@id/iv_premium" />

        <ImageView
            android:id="@+id/iv_kallendar"
            android:src="@drawable/baseline_calendar_month_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>


            <TextView
                android:id="@+id/tv_calendar_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#979595"
                android:text="@string/app_name"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toEndOf="@id/iv_kallendar"/>


            <ImageView
                android:id="@+id/iv_clock"
                android:src="@drawable/baseline_punch_clock_24"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_kallendar"
                app:layout_constraintStart_toStartOf="@id/iv_kallendar"/>

            <TextView
                android:id="@+id/tvClockTitle"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:textColor="#979595"

                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_clock"
                app:layout_constraintStart_toEndOf="@id/iv_clock" />

            <ImageView
                android:id="@+id/iv_pd"
                android:src="@drawable/pc13"
                app:layout_constraintBottom_toBottomOf="@id/tv_calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_calendar_title"
                app:layout_constraintStart_toEndOf="@id/tvClockTitle"/>



    <ImageView
        android:id="@+id/iv_action"
        android:src="@drawable/baseline_local_movies_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_clock"
        app:layout_constraintStart_toStartOf="@id/iv_clock"/>

    <TextView
        android:id="@+id/tvActionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="#979595"
        android:text="@string/app_name"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@id/iv_clock"
        app:layout_constraintStart_toEndOf="@id/iv_action"/>


</androidx.constraintlayout.widget.ConstraintLayout>