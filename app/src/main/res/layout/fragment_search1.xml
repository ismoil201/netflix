<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#171725"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp"
    tools:context=".view.SearchFrg">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_et"
        android:textColor="#92929D"
        android:drawableStart="@drawable/search1"
        android:paddingStart="8dp"
        android:background="@drawable/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F1D2B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        android:layout_marginTop="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tb_search"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Today"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_ninja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_today"
            android:layout_marginTop="12dp"
            android:src="@drawable/image_search"/>

        <ImageView
            android:id="@+id/iv_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_ninja"
            app:layout_constraintTop_toTopOf="@id/iv_ninja"
            android:src="@drawable/premium"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_noway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spider-Man No Way.. "
            app:layout_constraintStart_toStartOf="@id/iv_premium"
            app:layout_constraintTop_toBottomOf="@id/iv_premium"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_noway"
            app:layout_constraintTop_toBottomOf="@id/tv_noway"
            android:src="@drawable/calendar"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_calendar"
            app:layout_constraintTop_toTopOf="@id/iv_calendar"
            app:layout_constraintBottom_toBottomOf="@id/iv_calendar"
            android:text="2021"
            android:textColor="#92929D"
            android:layout_marginStart="6dp"/>

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_noway"
            app:layout_constraintTop_toBottomOf="@id/iv_calendar"
            android:src="@drawable/clock"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_clock"
            app:layout_constraintTop_toTopOf="@id/iv_clock"
            app:layout_constraintBottom_toBottomOf="@id/iv_clock"
            android:text="148 Minutes"
            android:textColor="#92929D"
            android:layout_marginStart="6dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_minute"
            app:layout_constraintTop_toTopOf="@id/tv_minute"
            app:layout_constraintBottom_toBottomOf="@id/tv_minute"
            android:src="@drawable/group_33"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:id="@+id/iv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_noway"
            app:layout_constraintTop_toBottomOf="@id/iv_clock"
            android:src="@drawable/film"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_action"
            app:layout_constraintTop_toTopOf="@id/iv_action"
            app:layout_constraintBottom_toBottomOf="@id/iv_action"
            android:text="Action    |"
            android:textColor="#92929D"
            android:layout_marginStart="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_action"
            app:layout_constraintTop_toTopOf="@id/tv_action"
            app:layout_constraintBottom_toBottomOf="@id/tv_action"
            android:text="Movie"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_2"
        android:layout_marginTop="80dp">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Recommend for you"
        android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="#12CDD9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_search"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>